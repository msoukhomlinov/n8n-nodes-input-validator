{
  "name": "n8n-nodes-input-validator",
  "version": "2.6.1",
  "description": "Validate input data in n8n: string, number, boolean, date, enum, phone.",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "validation",
    "input",
    "phone",
    "google-libphonenumber"
  ],
  "license": "MIT",
  "homepage": "https://github.com/msoukhomlinov/n8n-nodes-input-validator#readme",
  "author": {
    "name": "Max Soukhomlinov",
    "url": "https://github.com/msoukhomlinov"
  },
  "contributors": [
    {
      "name": "cdmx1",
      "url": "https://github.com/cdmx1"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msoukhomlinov/n8n-nodes-input-validator.git"
  },
  "bugs": {
    "url": "https://github.com/msoukhomlinov/n8n-nodes-input-validator/issues"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "postbuild": "node -e \"const fs=require('fs'); const tsbuildinfo='dist/tsconfig.tsbuildinfo'; if(fs.existsSync(tsbuildinfo)) fs.unlinkSync(tsbuildinfo);\"",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "nodes": [
      "dist/nodes/ValidatorNode/ValidatorNode.node.js"
    ]
  },
  "devDependencies": {
    "@types/google-libphonenumber": "^7.4.30",
    "@types/node": "^24.5.2",
    "@types/validator": "^13.15.3",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "gulp": "^5.0.0",
    "n8n-workflow": "*",
    "prettier": "^3.3.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "dependencies": {
    "google-libphonenumber": "^3.2.43",
    "validator": "^13.15.15"
  }
}
